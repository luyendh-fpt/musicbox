<Page
    x:Class="MusicBox.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MusicBox"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:entity="using:MusicBox.Entity"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Pivot Background="{ThemeResource SystemControlChromeHighAcrylicElementMediumBrush}" >
            <Pivot.Title>
                <Grid>
                    <TextBlock Text="Song That I Like" Style="{ThemeResource SubheaderTextBlockStyle}"/>
                </Grid>
            </Pivot.Title>
            <Pivot.RightHeader>
                <CommandBar OverflowButtonVisibility="Collapsed" Background="Transparent">
                    <AppBarButton Icon="Add"/>
                    <AppBarSeparator/>
                    <AppBarButton Icon="Edit" />
                    <AppBarButton Icon="Delete" Click="BtnSelect_Click"/>
                    <AppBarSeparator/>
                    <AppBarButton Icon="Save" Click="SaveSong"/>
                </CommandBar>
            </Pivot.RightHeader>
            <PivotItem Header="List Song" Margin="0">
                <ListView x:Name="MenuList"
                          ItemsSource="{x:Bind Songs, Mode=TwoWay}">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="entity:Song">
                            <StackPanel
                                Tapped="Song_Tapped"
                                Orientation="Horizontal" 
                                Padding="12" 
                                Tag="{Binding}"                                
                                AutomationProperties.Name="{x:Bind Title}">
                                <Image Source="{x:Bind Thumbnail}"
                                       Height="50" Width="50" VerticalAlignment="Center"/>
                                <TextBlock Text="{x:Bind Title}" VerticalAlignment="Center" Style="{ThemeResource BaseTextBlockStyle}" Foreground="{ThemeResource SystemControlPageTextBaseHighBrush}" Margin="12,0,0,0"/>

                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </PivotItem>
            <PivotItem Header="Song Form" Margin="0">
                <!--Form Example-->
                <Grid Background="White">
                    <RelativePanel>
                        <StackPanel x:Name="GeneralInformation" Margin="20">
                            <Image x:Name="ImageView"/>
                            <TextBox x:Name="Title" Header= "Title" Margin="0,24,0,0" MaxLength="320" Width="400" HorizontalAlignment="Left"/>
                            <TextBox x:Name="Description" Header="Description" Margin="0,24,0,0" Width="400" HorizontalAlignment="Left"/>
                            <TextBox x:Name="Author" Header="Author" Margin="0,24,0,0" MaxLength="50" Width="200" HorizontalAlignment="Left"/>
                            <TextBox x:Name="Singer" Header="Singer" Margin="0,24,0,0" MaxLength="50" Width="200" HorizontalAlignment="Left"/>
                            <TextBox x:Name="Kind" Header="Kind" Margin="0,24,0,0" MaxLength="50" Width="400" HorizontalAlignment="Left"/>
                        </StackPanel>
                        <StackPanel x:Name="DetailInformation" Margin="20" RelativePanel.RightOf="GeneralInformation">
                            <TextBox x:Name="Link" Header= "Link" Margin="0,24,0,0" Width="600" HorizontalAlignment="Left"/>
                            <TextBox x:Name="Thumbnail" Header="Thumbnail" Margin="0,24,0,0" Width="600" HorizontalAlignment="Left"/>
                        </StackPanel>
                    </RelativePanel>
                </Grid>
            </PivotItem>
            
            <!-- UserForm Frame -->
            <PivotItem Header="User">
                <Frame x:Name="UserFrame">

                </Frame>
            </PivotItem>
            <!-- /UserForm Frame             -->

        </Pivot>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Orientation="Horizontal" Background="#FFDEDEDE" Height="25" Margin="0,0,0,44">
            <TextBlock>
                Now Playing:
            </TextBlock>
            <TextBlock x:Name="nowPlaying" Margin="10,0,0,0">
                ...
            </TextBlock>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Orientation="Horizontal" Background="#FFDEDEDE" Height="45">
            <AppBarSeparator/>
            <ProgressBar x:Name="Progress" Height="15" Width="320"></ProgressBar>
            <AppBarSeparator/>
            <AppBarButton Icon="Previous" Click="playBack" ToolTipService.ToolTip="Previous Song"/>
            <AppBarButton x:Name="PlayButton" Icon="Play" Click="Play_Click" ToolTipService.ToolTip="Play/Pause Song" />
            <AppBarButton Icon="Next" Click="playNext" ToolTipService.ToolTip="Next Song"/>
            <AppBarSeparator/>
            <Slider x:Name="volumeSlider" Width="120" HorizontalAlignment="Center" VerticalAlignment="Center" Height="36" ValueChanged="volumeSlider_ValueChanged" ToolTipService.ToolTip="Volume"/>
            <TextBlock x:Name="volume" Width="28" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" TextAlignment="Right">
                100
            </TextBlock>
            <TextBlock Width="15" Height="20">
                %
            </TextBlock>
            <AppBarSeparator/>
        </StackPanel>
        <MediaElement Width="600" x:Name="MediaPlayer">
        </MediaElement>
    </Grid>
</Page>
